@model HomeViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-6">
        <h3>Commissioner's Notes</h3>
        @if (this.Model.Information.IsEmpty())
        {
            <p>There are no updates from the commissioner!</p>
        }
        else
        {
            <p>@this.Model.Information</p>
        }
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <h3>Team Standings for @this.Model.SelectedYear</h3>
        @if (this.Model.TeamRankingDataForYear.Count() == 0)
        {
            <p>There is no data for @this.Model.SelectedYear!</p>
        }
        else { 
            <table class="table">
                <thead>
                    <tr>
                        <th></th>
                        <th>Name</th>
                        <th>Points</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rankData in this.Model.TeamRankingDataForYear)
                    {
                        <tr>
                            <td>@rankData.rank</td>
                            <td>@rankData.team.teamName</td>
                            <td>@rankData.value</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
    <div class="col-md-8">
        <h3>@this.Model.SelectedYear Schedule</h3>
        @if (this.Model.ScheduleYear == null || this.Model.ScheduleYear.weeks.Count() == 0)
        {
            <p>There is no data for @this.Model.SelectedYear!</p>
        }
        else { 
            <table class="table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Course</th>
                        <th>Pairings</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var week in this.Model.ScheduleYear.weeks.OrderBy(w => w.date))
                    {
                        <tr>
                            <td>@week.date.ToShortDateString()</td>
                            <td>@week.course.name</td>
                            <td>@week.pairing.pairingText</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>